@model List<Teacher>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary" asp-area="" asp-controller="Teacher" asp-action="Create">Add new Teacher</a>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Teacher Name</th>
            <th scope="col">Teacher Age</th>
            <th scope="col">Delete</th>


        </tr>
    </thead>
    <tbody>
        @foreach (Teacher teacher in Model)
        {
            <tr>

                <td>@teacher.TeacherName</td>
                <td>@teacher.TeacherAge</td>
                <td>
                    <a class="btn btn-danger" href="/Teacher/Delete/@teacher.TeacherId">Delete @teacher.TeacherName</a>

                </td>
            </tr>


        }

    </tbody>
</table>

