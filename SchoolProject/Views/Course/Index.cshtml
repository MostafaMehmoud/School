@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary" asp-area="" asp-controller="Course" asp-action="Create">Add new Course</a>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Course Name</th>
            <th scope="col">Capicity</th>
            <th scope="col">Delete</th>


        </tr>
    </thead>
    <tbody>
        @foreach (Course course in Model)
        {
            <tr>

                <td>@course.CourseName</td>
                <td>@course.CourseCapicity</td>
                <td>
                    <a class="btn btn-danger" href="/Student/Delete/@course.CourseId">Delete </a>

                </td>
            </tr>


        }

    </tbody>
</table>

