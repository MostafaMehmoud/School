@model List<Room>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary" asp-area="" asp-controller="Room" asp-action="Create">Add new Room</a>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Room Name</th>
            <th scope="col">Number</th>
            <th scope="col">Delete</th>


        </tr>
    </thead>
    <tbody>
        @foreach (Room room in Model)
        {
            <tr>

                <td>@room.RoomName</td>
                <td>@room.RoomID</td>
                <td>
                    <a class="btn btn-danger" href="/Room/Delete/@room.RoomID">Delete</a>

                </td>
            </tr>


        }

    </tbody>
</table>

