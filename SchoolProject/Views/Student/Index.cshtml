@model List<Student>
@{
    ViewData["Title"] = "Index";
}

    <a class="btn btn-primary" asp-area="" asp-controller="Student" asp-action="Create">Add new Student</a>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Student Name</th>
            <th scope="col">Student Age</th>
            <th scope="col">Student Photo</th>
            <th scope="col">Delete</th>


        </tr>
    </thead>
    <tbody>
    @foreach(Student student in Model)
    {
        <tr>
            
            <td>@student.StudentName</td>
            <td>@student.StudentAge</td>
            <td>
                    <img width="50"height="50" src="~/Studentpicture/@student.PhotoName" />
            </td>
            <td>
                    <a class="btn btn-danger" href="/Student/Delete/@student.StudentId">Delete @student.StudentName</a>

            </td>
        </tr>


    }
        
    </tbody>
</table>

